<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>License no</th>
      <th>Email</th>
      <th>Phone num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.f_name %></td>
        <td><%= doctor.l_name %></td>
        <td><%= doctor.license_no %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_num %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Doctor ', new_doctor_path , class: "btn btn-primary" %>

